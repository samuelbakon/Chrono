{
    "name": "samyasm/Chrono",
    "description": "A PHP utility for date manipulation and formatting",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Samy",
            "email": "samy@example.com"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "autoload": {
        "psr-4": {
            "SamyAsm\\Chrono\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "check-style": "phpcs -p --standard=PSR12 src tests",
        "fix-style": "phpcbf -p --standard=PSR12 src tests",
        "static-analysis": "phpstan analyse --level=max src",
        "analyse": [
            "@check-style",
            "@static-analysis",
            "@test"
        ]
    }
}
